<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment"
    android:background="@color/mainColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fragment_home_cardview" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_title_icon_shape"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/circle_shape"/>

                <ImageView
                    android:id="@+id/iv_title_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/exclamation"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/tv_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/textColor"
                    android:layout_toEndOf="@id/iv_title_icon_shape"/>

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/tv_subtitle"
                    android:textSize="12sp"
                    android:textColor="@color/textColor"
                    android:layout_below="@id/tv_title"
                    android:layout_toEndOf="@id/iv_title_icon_shape"/>

                <View
                    android:id="@+id/v_horizontal_1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/viewLine"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/tv_subtitle"/>

                <View
                    android:id="@+id/v_half_cirle"
                    android:layout_width="280dp"
                    android:layout_height="140dp"
                    android:background="@drawable/half_circle"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"/>

                <TextView
                    android:id="@+id/esp32_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:layout_marginStart="15dp"
                    android:text="Offline"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_subtitle"
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:id="@+id/v_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/v_half_cirle"
                    android:layout_marginTop="-20dp"
                    android:background="@color/homeCardBackgroundColor"/>

                <View
                    android:id="@+id/v_horizontal_2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/viewLine"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginEnd="34dp"
                    android:layout_below="@id/v_half_cirle"/>

                <View
                    android:id="@+id/v_vertical_1"
                    android:layout_width="2.2dp"
                    android:layout_height="90dp"
                    android:background="@color/viewLine"
                    android:layout_below="@id/v_horizontal_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-1dp"/>

                <View
                    android:id="@+id/v_horizontal_3"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:background="#FFFFFF"
                    android:layout_above="@id/v_rectangle"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="35dp"/>

                <View
                    android:id="@+id/v_horizontal_4"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:background="#FFFFFF"
                    android:layout_above="@id/v_rectangle"
                    android:layout_marginBottom="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="35dp"/>

                <View
                    android:id="@+id/v_vertical_2"
                    android:layout_width="5.7dp"
                    android:layout_height="20dp"
                    android:background="#FFFFFF"
                    android:layout_below="@id/v_horizontal_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/tv_data_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/esp32_status"
                    android:layout_centerHorizontal="true"
                    android:text="@string/tv_data_tanggal"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="24dp"/>

                <ProgressBar
                    android:id="@+id/progress_online"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_fire_detected_today"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/firealarm"
                    android:layout_below="@+id/v_horizontal_2"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="13dp"/>

                <TextView
                    android:id="@+id/tv_total_fire_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_fire_detected_today"
                    android:layout_toStartOf="@+id/v_vertical_1"
                    android:layout_below="@+id/v_horizontal_2"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/textColor"
                    android:text="@string/tv_data_fire_today"/>

                <ImageView
                    android:id="@+id/iv_waterpump_usage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/watercrisis"
                    android:layout_below="@+id/v_horizontal_2"
                    android:layout_toEndOf="@id/v_vertical_1"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="13dp"/>

                <TextView
                    android:id="@+id/tv_total_water_todday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_waterpump_usage"
                    android:layout_below="@+id/v_horizontal_2"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/textColor"
                    android:text="@string/tv_data_water_usage"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_margin="20dp"
            android:text="Mode"/>

        <Button
            android:id="@+id/pump_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_toEndOf="@id/button_mode"
            android:layout_margin="20dp"
            android:text="Pump"/>

        <Button
            android:id="@+id/sensor_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_toEndOf="@id/pump_status"
            android:layout_margin="20dp"
            android:text="Sensor"
            android:visibility="gone"/>

    </RelativeLayout>
</FrameLayout>