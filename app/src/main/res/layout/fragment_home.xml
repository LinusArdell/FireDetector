<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment"
    android:background="@color/mainColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/mainColor"
            android:backgroundTint="@color/mainColor">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_outline" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_margin="20dp"
            android:text="Mode"/>

        <Button
            android:id="@+id/pump_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_toEndOf="@id/button_mode"
            android:layout_margin="20dp"
            android:text="Pump"/>

        <Button
            android:id="@+id/sensor_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_toEndOf="@id/pump_status"
            android:layout_margin="20dp"
            android:text="Sensor"/>

        <Button
            android:id="@+id/button_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_mode"
            android:layout_margin="20dp"
            android:visibility="visible"
            android:text="Time"/>

        <TextView
            android:id="@+id/esp32_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_date"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:text="ESP32 Status: Offline"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>
</FrameLayout>