<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment"
    android:background="@color/mainColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor">

        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/glowing_effect"/>

        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="67dp"
            android:elevation="4dp"
            android:src="@drawable/user"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Hello, Linus Ardell ðŸ‘‹"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_user_profile"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"
            android:text="linus@user.com"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_username"
            android:layout_marginTop="3dp" />

        <View
            android:id="@+id/v_horizontal_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/viewLine"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tv_user_email"/>

        <RelativeLayout
            android:id="@+id/rv_edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/v_horizontal_1">

            <View
                android:id="@+id/v_glowing_icon_update_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/glowing_icon"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edituser"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_edit_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:text="Edit Profile"
                android:layout_toEndOf="@id/v_glowing_icon_update_user"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_delete_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/rv_edit_user">

            <View
                android:id="@+id/v_glowing_icon_delete_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/glowing_icon_2"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/deleteuser"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_delete_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:text="Delete Account"
                android:layout_toEndOf="@id/v_glowing_icon_delete_user"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/rv_delete_user">

            <View
                android:id="@+id/v_glowing_icon_logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/glowing_icon_3"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:text="Logout"
                android:layout_toEndOf="@id/v_glowing_icon_logout"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/v_horizontal_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/viewLine"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/rv_logout"/>

        <RelativeLayout
            android:id="@+id/rv_close_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/v_horizontal_2">

            <View
                android:id="@+id/v_glowing_icon_exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/glowing_icon_4"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/exit"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:text="Close Apps"
                android:layout_toEndOf="@id/v_glowing_icon_exit"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
